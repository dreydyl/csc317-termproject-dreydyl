<body>
    <header>
        <h1>Login</h1>
    </header>
    <form method="POST" action="/users/login" enctype="application/x-www-form-urlencoded">
        <fieldset>
            <legend>Info</legend>
            <label>Username</label>
            <input type="text" name="username" required/>
            <br />

            <label class="pw">Password</label>
            <input type="password" class="inputpw" name="password" required/>
            <br />
        <button type="submit">Login</button>

        <div>Don't have an account? <a href="\registration">Register</a></div>
        </fieldset>
    </form>
</body>